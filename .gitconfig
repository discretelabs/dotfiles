[user]
	name = Your Name
	email = Your Email Address
	net = Your Name
[color]
	ui = true

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[core]
	editor = nano
	excludesfile = /Users/[username]/.gitignore_global
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

[difftool "atom"]
	prompt = false
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = /usr/local/bin/atom #/usr/bin/vimdiff

[push]
	default = simple

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

[alias]
	a = add
	b = branch

	c = commit -v
	co = checkout
	ca = commit -v --amend
	
	d = diff --color-words -w
	ds = diff --color-words -w --staged

	f = fetch
	fix = commit --amend -C HEAD

	l = log --decorate=short
	ls = ls-files
	logg = log --decorate --oneline --abbrev-commit --all -n 20
	last = log -1 HEAD

	m = merge
	mc = merge --no-ff --commit

	p = push
	pu = push --set-upstream origin
	pull = pull -ff-only

	r = rebase
	rc = rebase --continue
	ra = rebase --abort
	rs = rebase --skip
	rs = remote show

	s = status
	sb = status -s -b

	untrack = rm --cached
	unstage = reset HEAD --
