[user]
	name = Your Name
	email = Your Email Address
	net = Your Name
[color]
	ui = true

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[core]
	editor = nano
	excludesfile = /Users/[username]/.gitignore_global
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[difftool "mate"]
	prompt = false
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = /usr/local/bin/mate

[push]
	default = simple

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
	
[alias]
	a = add
	aa = add --all
    ap = add --patch

	b = branch
	bm = branch --merged
	bnm = branch --no-merged

	c = commit -v
	co = checkout
	ca = commit -v --amend

	d = diff --color-words -w
	ds = diff --color-words -w --staged

	f = fetch
	fix = commit --amend -C HEAD	#amend, commit and reuse the last commit message
	
	in = commit -am 'Initial commit' --allow-empty

	l = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short --decorate=short
	last = log -1 HEAD
	lg = log --decorate --oneline --abbrev-commit --all -n 20
	ll = log --numstat --decorate 
	ls = ls-files

	m = merge
	mc = merge --no-ff --commit

	p = push
	pap = push --all --prune
	pu = push --set-upstream origin
	pull = pull -ff-only

	r = rebase
	rc = rebase --continue
	ra = rebase --abort
	rs = rebase --skip

	rms = remote show

	s = status
	sb = status -s -b
	stash-unaply = '!git stash show -p | git apply -R'

	undo = git reset --soft HEAD^ #Undo last commit without deleting changes
	untrack = rm --cached
	unstage = reset HEAD --				#Unstage a file - step 2 of 'undo'

	up = !git fetch origin && git rebase origin/master
